    white-space: nowrap;
  }

  .nav-link-icon[href*="/dashboard"]:hover .icon { transform: scale(1.1); }
  .nav-link-icon[href*="/registru"]:hover .icon { transform: scale(1.1); }
  .nav-link-icon[href*="/editare"]:hover .icon { transform: scale(1.1); }
  .nav-link-icon[href*="/genereaza"]:hover .icon { transform: scale(1.1); }
  .nav-link-icon[href*="/registre"]:hover .icon { transform: scale(1.1); }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: #667eea;
    font-weight: 700;
    font-size: 1.3rem;
  }

