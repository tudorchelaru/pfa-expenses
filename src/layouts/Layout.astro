    <!-- Con»õinut principal -->
    <main class="page-content">
      <slot />
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Activity Tracking pentru timeout de inactivitate -->
    {Astro.locals.user && (
      <script>
        (function() {
          let lastActivity = Date.now();
          let activityCheckInterval: number | null = null;
          
          // Evenimente care indicƒÉ activitate utilizator
          const activityEvents = ['mousedown', 'mousemove', 'keypress', 'scroll', 'touchstart', 'click'];
          
          // Func»õie pentru actualizarea activitƒÉ»õii
          function updateActivity() {
            lastActivity = Date.now();
          }
          
          // Func»õie pentru trimiterea heartbeat la server
          async function sendActivityHeartbeat() {
            try {
              const response = await fetch('/api/auth/activity', {
                method: 'POST',
                credentials: 'include'
              });
              
              if (response.status === 401) {
                // Sesiunea a expirat, redirec»õioneazƒÉ la login
                window.location.href = '/login';
                return;
              }
            } catch (error) {
              console.error('Eroare la trimiterea heartbeat:', error);
            }
          }
          
          // AdaugƒÉ event listeners pentru activitate
          activityEvents.forEach(event => {
            document.addEventListener(event, updateActivity, { passive: true });
          });
          
          // VerificƒÉ inactivitatea la fiecare 30 de secunde
          activityCheckInterval = window.setInterval(() => {
            const now = Date.now();
            const timeSinceLastActivity = now - lastActivity;
            
            // DacƒÉ utilizatorul a fost inactiv mai mult de 9 minute, trimite heartbeat
            // pentru a preveni logout-ul (timeout-ul este de 10 minute)
            if (timeSinceLastActivity > 9 * 60 * 1000) {
              sendActivityHeartbeat();
            }
            
            // Trimite heartbeat periodic (la fiecare 2 minute) pentru a men»õine sesiunea activƒÉ
            // c√¢nd utilizatorul este activ
            if (timeSinceLastActivity < 2 * 60 * 1000) {
              sendActivityHeartbeat();
            }
          }, 30 * 1000); // VerificƒÉ la fiecare 30 de secunde
          
          // Trimite heartbeat imediat la √ÆncƒÉrcarea paginii
          sendActivityHeartbeat();
          
          // Cleanup la √Ænchiderea paginii
          window.addEventListener('beforeunload', () => {
            if (activityCheckInterval !== null) {
              clearInterval(activityCheckInterval);
            }
          });
        })();
      </script>
    )}
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
  }

  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  body {
    margin: 0;
    padding: 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    color: #1a1a1a;
    /* Ascunde scrollbar-urile globale */
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE »ôi Edge */
    overflow-x: hidden;
  }

  body::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera */
  }

  html {
    overflow-x: hidden;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE »ôi Edge */
  }

  html::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera */
  }

  .top-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    pointer-events: none;
  }

  .top-bar-inner {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 0.75rem 1.5rem;
  }

  .user-menu {
    display: flex;
    align-items: center;
    gap: 1rem;
    pointer-events: auto;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(10px);
    border-radius: 999px;
    padding: 0.5rem 1rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .user-name {
    color: white;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .logout-btn,
  .login-btn {
    color: white;
    text-decoration: none;
    font-size: 0.85rem;
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    transition: all 0.2s;
    background: rgba(255, 255, 255, 0.1);
  }

  .logout-btn:hover,
  .login-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.05);
  }

  .main-nav {
    position: fixed;
    top: 60px;
    left: 0;
    right: 0;
    z-index: 90;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    border-bottom: 2px solid rgba(102, 126, 234, 0.2);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-left {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-menu-icons {
    display: flex;
    list-style: none;
    gap: 1rem;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .nav-item-icon {
    margin: 0;
  }

  .nav-link-icon {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    background: rgba(102, 126, 234, 0.1);
    border: 1px solid rgba(102, 126, 234, 0.2);
    color: #333;
    font-weight: 500;
    font-size: 0.9rem;
  }

  .nav-link-icon:hover {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
    border-color: rgba(102, 126, 234, 0.4);
