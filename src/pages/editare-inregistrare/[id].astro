---
import Layout from '../../layouts/Layout.astro';

if (!Astro.locals.user) {
  return Astro.redirect('/login');
}

const { id } = Astro.params;
const entryId = parseInt(id || '0');

// ÃncarcÄƒ intrarea prin API
let entry: any = null;
let exists = false;

try {
  const response = await fetch(`${Astro.url.origin}/api/registru/get/${entryId}`, {
    headers: {
      Cookie: Astro.request.headers.get('Cookie') || ''
    }
  });
  
  if (response.ok) {
    const data = await response.json();
    entry = data.entry;
    exists = true;
  }
} catch (error) {
  console.error('Eroare la Ã®ncÄƒrcare:', error);
}

if (!exists) {
  return Astro.redirect('/editare-registru');
}
---

<Layout title="ModificÄƒ Ãnregistrare - PFA Expenses">
  <div class="form-container">
    <div class="form-card">
      <div class="form-header">
        <h2>âœï¸ Editare Ã®nregistrare</h2>
        <p>ModificÄƒ datele Ã®nregistrÄƒrii</p>
      </div>

      <div id="alert-container"></div>

      <form id="edit-form" method="POST" action={`/api/registru/update/${entryId}`}>
        <div class="mb-3">
          <label for="data" class="form-label">ğŸ“… Data</label>
          <input type="date" name="data" id="data" value={entry.data} class="form-control" required />
        </div>

        <div class="mb-3">
          <label class="form-label">ğŸ’³ Tip tranzacÈ›ie</label><br />
