<script>
  function togglePlataFields() {
    const tipRadios = document.querySelectorAll('input[name="tip"]') as NodeListOf<HTMLInputElement>;
    const isPlata = Array.from(tipRadios).find(r => r.checked)?.value === 'plata';
    const plataFields = document.getElementById('plata_fields');
    const tipCheltuiala = document.getElementById('tip_cheltuiala') as HTMLSelectElement;
    const deductibilitate = document.getElementById('deductibilitate') as HTMLSelectElement;

    if (isPlata) {
      plataFields!.style.display = 'block';
      tipCheltuiala!.disabled = false;
      deductibilitate!.disabled = false;
    } else {
      plataFields!.style.display = 'none';
      tipCheltuiala!.disabled = true;
      deductibilitate!.disabled = true;
    }
  }

  window.addEventListener('DOMContentLoaded', function() {
    togglePlataFields();
    document.querySelectorAll('input[name="tip"]').forEach(radio => {
      radio.addEventListener('change', togglePlataFields);
    });
  });

  document.getElementById('edit-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);
    
    const response = await fetch(form.action, {
      method: 'POST',
      body: formData
    });

    const result = await response.json();
    const alertContainer = document.getElementById('alert-container');
    
    if (response.ok) {
      alertContainer!.innerHTML = `
        <div class="alert alert-success" style="background: rgba(40, 167, 69, 0.2); border: 1px solid rgba(40, 167, 69, 0.5); color: #155724; border-radius: 10px; padding: 1rem;">
          âœ… ${result.message || 'Ãnregistrare actualizatÄƒ cu succes!'}
        </div>
      `;
      setTimeout(() => {
        window.location.href = '/editare-registru';
      }, 1500);
    } else {
      alertContainer!.innerHTML = `
        <div class="alert alert-danger" style="background: rgba(220, 53, 69, 0.2); border: 1px solid rgba(220, 53, 69, 0.5); color: #721c24; border-radius: 10px; padding: 1rem;">
          âŒ ${result.error || 'Eroare la actualizare'}
        </div>
      `;
    }
  });
</script>

<style>
