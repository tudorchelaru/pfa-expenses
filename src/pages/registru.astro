    border-radius: 10px;
    margin-bottom: 1rem;
  }

  #alert-container .alert-success {
    background: rgba(40, 167, 69, 0.2);
    color: #fff;
    border: 1px solid rgba(40, 167, 69, 0.5);
    backdrop-filter: blur(10px);
  }

