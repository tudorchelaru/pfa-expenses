    position: relative;
  }

  .date-icon {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.2rem;
    pointer-events: none;
    z-index: 1;
  }

  .date-input {
    cursor: pointer;
    padding-right: 1rem;
    position: relative;
  }
  
  .date-input::-webkit-calendar-picker-indicator {
    cursor: pointer;
    filter: invert(1);
    opacity: 0.8;
    padding: 0.25rem;
    margin-left: 0.5rem;
  }
  
  .date-input::-webkit-calendar-picker-indicator:hover {
    opacity: 1;
  }

  /* Radio buttons custom */
  .radio-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .radio-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    cursor: pointer;
    transition: all 0.3s ease;
    flex: 1;
    min-width: 140px;
    position: relative;
  }

