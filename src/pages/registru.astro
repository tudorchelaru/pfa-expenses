    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .form-header p {
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    font-size: 0.95rem;
  }

  #alert-container {
    margin-bottom: 1.5rem;
  }

