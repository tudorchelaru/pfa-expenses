    padding: 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    margin-top: 1.5rem;
  }

  .submit-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
  }

  .submit-button:active {
    transform: translateY(0);
  }

  #plata_fields {
    background: rgba(102, 126, 234, 0.15);
    padding: 1.5rem;
    border-radius: 16px;
    border: 2px solid rgba(102, 126, 234, 0.3);
    margin-top: 1rem;
    backdrop-filter: blur(10px);
  }

  .text-danger {
    color: rgba(255, 200, 200, 0.9);
    font-size: 0.85rem;
    background: rgba(220, 53, 69, 0.2);
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    border: 1px solid rgba(220, 53, 69, 0.3);
  }

  @media (max-width: 768px) {
    .form-card {
      padding: 1.5rem;
    }

    .form-header h2 {
      font-size: 1.5rem;
    }
  }
</style>

<script is:inline>
  // Toggle cÃ¢mpuri pentru platÄƒ
  function togglePlataFields() {
    const tipPlataEl = document.getElementById('tip_plata');
    const isPlata = tipPlataEl && tipPlataEl.checked;
    const plataFields = document.getElementById('plata_fields');
    const tipCheltuiala = document.getElementById('tip_cheltuiala');
    const deductibilitate = document.getElementById('deductibilitate');

    if (isPlata && plataFields && tipCheltuiala && deductibilitate) {
      plataFields.style.display = 'block';
      tipCheltuiala.disabled = false;
      deductibilitate.disabled = false;
    } else if (plataFields && tipCheltuiala && deductibilitate) {
      plataFields.style.display = 'none';
      tipCheltuiala.disabled = true;
      deductibilitate.disabled = true;
      tipCheltuiala.value = 'diverse';
      deductibilitate.value = '100';
    }
  }

  // IniÈ›ializare cÃ¢nd DOM-ul este gata
  function initForm() {
    togglePlataFields();
    
    // SeteazÄƒ data de astÄƒzi ca valoare implicitÄƒ dacÄƒ input-ul este gol
    const dataInput = document.getElementById('data');
    if (dataInput) {
      if (!dataInput.value) {
        const today = new Date();
        const year = today.getFullYear();
        const month = String(today.getMonth() + 1).padStart(2, '0');
        const day = String(today.getDate()).padStart(2, '0');
        dataInput.value = year + '-' + month + '-' + day;
      }
      
      // Deschide calendarul la click oriunde Ã®n input
      dataInput.addEventListener('click', function() {
        // FoloseÈ™te showPicker() dacÄƒ este disponibil (API modern)
        if (typeof dataInput.showPicker === 'function') {
          try {
            dataInput.showPicker();
          } catch (e) {
            // Fallback: focus È™i apoi click pe iconiÈ›a calendarului
            dataInput.focus();
            dataInput.click();
          }
        } else {
          // Fallback pentru browsere mai vechi
          dataInput.focus();
          // SimuleazÄƒ un click pe iconiÈ›a calendarului
          const event = new MouseEvent('mousedown', {
            view: window,
            bubbles: true,
            cancelable: true
          });
          dataInput.dispatchEvent(event);
        }
      });
      
      // Deschide calendarul È™i la focus
      dataInput.addEventListener('focus', function() {
        if (typeof dataInput.showPicker === 'function') {
          try {
            dataInput.showPicker();
          } catch (e) {
            // IgnorÄƒ eroarea
          }
        }
      });
    }
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initForm);
  } else {
    initForm();
  }

  document.getElementById('tip_incasare')?.addEventListener('change', togglePlataFields);
  document.getElementById('tip_plata')?.addEventListener('change', togglePlataFields);
</script>

<script>
  // Submit form
  const registruForm = document.getElementById('registru-form');
  if (registruForm) {
    registruForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      const form = e.target;
      if (!form) return;
      
      const formData = new FormData(form);
      
      // Bootstrap Datepicker trimite deja formatul YYYY-MM-DD
      // VerificÄƒm doar cÄƒ data este validÄƒ
      const dataValue = formData.get('data');
      const dataValueStr = dataValue ? String(dataValue) : '';
      if (!dataValueStr || !/^\d{4}-\d{2}-\d{2}$/.test(dataValueStr)) {
        const alertContainer = document.getElementById('alert-container');
        if (alertContainer) {
          alertContainer.innerHTML = '<div class="alert alert-danger">Te rog selecteazÄƒ o datÄƒ validÄƒ.</div>';
        }
        return;
      }

      const response = await fetch('/api/registru/save', {
        method: 'POST',
        body: formData
      });

      const result = await response.json();
      const alertContainer = document.getElementById('alert-container');
      
      if (response.ok) {
        if (alertContainer) {
          alertContainer.innerHTML = '<div class="alert alert-success">' + (result.message || 'ÃŽnregistrare salvatÄƒ cu succes!') + '</div>';
        }
        if (form && typeof form.reset === 'function') {
          form.reset();
        }
        togglePlataFields();
        // ReseteazÄƒ input-ul de datÄƒ
        const dataInput = document.getElementById('data');
        if (dataInput) {
          const today = new Date();
          const year = today.getFullYear();
          const month = String(today.getMonth() + 1).padStart(2, '0');
          const day = String(today.getDate()).padStart(2, '0');
          dataInput.value = year + '-' + month + '-' + day;
        }
      } else {
        if (alertContainer) {
          alertContainer.innerHTML = '<div class="alert alert-danger">' + (result.error || 'Eroare la salvare') + '</div>';
        }
      }
    });
  }
</script>
